db.createCollection("universidades",
{
    validator: {
        $jsonSchema: {
            bsonType: "object",
            required: ["nombre", "telefono", "carreras", "alumnos", "direccion"],
            properties: {
                nombre: {
                    bsonType: "string",
                    description: "debe ser un string y es obligatorio"
                },
                telefono: {
                    bsonType: "string",
                    description: "debe ser un string y es obligatorio"
                },
                carreras: {
                    bsonType: "array",
                    description: "debe ser un array y es obligatorio"
                },
                alumnos: {
                    bsonType: "int",
                    description: "debe ser un int y es obligatorio"
                },
                direccion: {
                    bsonType: "object",
                    required: ["calle", "numero", "distrito", "provincia", "pais"],
                    properties: {
                        calle: {
                            bsonType: "string",
                            description: "debe ser un string y es obligatorio"
                        },
                        numero: {
                            bsonType: "int",
                            description: "debe ser un int y es obligatorio"
                        },
                        distrito: {
                            bsonType: "string",
                            description: "debe ser un string y es obligatorio"
                        },
                        provincia: {
                            bsonType: "string",
                            description: "debe ser un string y es obligatorio"
                        },
                        pais: {
                            bsonType: "string",
                            description: "debe ser un string y es obligatorio"
                        }
                    }
                }
            }
        }
    }
});

